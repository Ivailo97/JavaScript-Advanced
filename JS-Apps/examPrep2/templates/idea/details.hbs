{{>header}}
<div class="container home some">
    <img class="det-img" src="{{imageURL}}" />
    <div class="desc">
        <h2 class="display-5">{{title}}</h2>
        <p class="infoType">Description:</p>
        <p class="idea-description">{{description}}</p>
        <p class="infoType">Likes:
            <large>{{likes}}</large>
        </p>
        <p class="infoType">Comments:</p>
        <ul>
            {{#if hasComments}}
            {{#each comments}}
            {{>comment}}
            {{/each}}
            {{else}}
            <li class="comment">No comments yet :(</li>
            {{/if}}
        </ul>
    </div>

    {{#if isOwner}}
    <div class="text-center">
        <a class="btn detb" href="#/idea/delete/{{ideaId}}">Delete</a>
    </div>
    {{else}}
    <form class="text-center" method="POST" action="#/idea/add-comment/{{ideaId}}">
        <textarea class="textarea-det" name="newComment" id=""></textarea>
        <button type="submit" class="btn detb">Comment</button>
        <a class="btn detb" href="#/idea/like/{{ideaId}}">Like</a>
    </form>
    {{/if}}
</div>
{{>footer}}